# Code to remove all folders not required..

# Removing all log files
printf "Removing all log files..\n"
find . -name "*.log" -type f -delete

# Removing build
if [ -d "build" ]; then
  echo "  "
  printf '%s\n' "Removing directory build"
  rm -rf "build"
  echo "  "
fi

# Removing cmake-build-debug
if [ -d "cmake-build-debug" ]; then
  echo "  "
  printf '%s\n' "Removing directory cmake-build-debug"
  rm -rf "cmake-build-debug"
  echo "  "
fi


# Removing src/target
if [ -d "src/target" ]; then
  echo "  "
  printf '%s\n' "Removing directory src/target"
  rm -rf "src/target"
  echo "  "
fi


# Removing joao-hugo-exemplos/communicator/target
if [ -d "joao-hugo-exemplos/communicator/target" ]; then
  echo "  "
  printf '%s\n' "Removing directory joao-hugo-exemplos/communicator/target"
